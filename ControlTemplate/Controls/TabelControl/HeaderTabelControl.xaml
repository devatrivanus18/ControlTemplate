<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlTemplate.Controls.TabelControl.HeaderTabelControl"
             x:Name="conHeaderTabel"
             BackgroundColor="Transparent" Padding="10" BindingContext="{x:Reference conHeaderTabel}">
    <Grid HorizontalOptions="CenterAndExpand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Text="{Binding Text}" HorizontalOptions="CenterAndExpand"  Grid.Column="0"   FontSize="Small" FontAttributes="Bold"  TextColor="Black" HorizontalTextAlignment="Center" Margin="3"/>
    </Grid>
</Frame>
