<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlTemplate.Controls.TabelControl.ContentTabel" x:Name="conContentTabel" Padding="5" Margin="5,10,10,5" BackgroundColor="Transparent" >
            <Grid BindingContext="{x:Reference conContentTabel}" HorizontalOptions="CenterAndExpand">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label VerticalOptions="CenterAndExpand" HorizontalOptions="Center" TextColor="Black" Grid.Column="0" Text ="{Binding Text}" Margin="1"></Label>
            </Grid>
</Frame>
