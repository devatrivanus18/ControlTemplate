<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlTemplate.Controls.TabelControl.ContentTabel" x:Name="conContentTabel" Padding="5" Margin="10,10,10,10" >
            <Grid BackgroundColor="Transparent" BindingContext="{x:Reference conContentTabel}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label VerticalOptions="EndAndExpand" TextColor="Black" Grid.Column="0" Text ="{Binding Text}"  HorizontalTextAlignment="Center" Margin="3"></Label>
            </Grid>
</Frame>
