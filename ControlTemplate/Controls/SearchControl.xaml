<?xml version="1.0" encoding="utf-8" ?>
<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ControlTemplate"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="ControlTemplate.Controls.SearchControl" x:Name="conSearch" BindingContext="{x:Reference conSearch}">
    <SearchBar x:Name="searchBar" Placeholder="Cari..." Text="{Binding Text}">
        <SearchBar.Behaviors>
            <toolkit:EventToCommandBehavior EventName="TextChanged" Command="{Binding Command}" CommandParameter="{Binding Text, Source={x:Reference searchBar}}"/>
        </SearchBar.Behaviors>
    </SearchBar>
</Grid>
