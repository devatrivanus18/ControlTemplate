<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ControlTemplate.ViewModels"
             xmlns:table="clr-namespace:ControlTemplate.Controls.TabelControl"
             x:Class="ControlTemplate.Views.TransaksiPage"
             Title="Transaksi">
    <ContentPage.BindingContext>
        <vm:vmTransaksi />
    </ContentPage.BindingContext>
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Tambah" Command="{Binding GetModalCommand}"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <table:TabelControl ItemsSource="{Binding DataTransaksi}" />
    </ContentPage.Content>
</ContentPage>