<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ControlLibrary.Controls;assembly=ControlLibrary"
             xmlns:vm="clr-namespace:ControlTemplate.ViewModels"
             x:Class="ControlTemplate.Views.TestPage">
    <ContentPage.BindingContext>
        <vm:vmTest/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="FillAndExpand">
            <control:pthEntri Placeholder="Test" Text="{Binding testLib, Mode=TwoWay}"/>
            <control:pthEntri Placeholder="Test 2" Text="12341246890s"/>
            <Entry Text="{Binding testLib}" TextTransform="Uppercase" Placeholder="Test"/>
            <Button Text="Kirim" Command="{Binding SubmitCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
