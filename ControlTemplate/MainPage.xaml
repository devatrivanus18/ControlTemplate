<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:ControlLibrary.Controls;assembly=ControlLibrary"
             xmlns:vm="clr-namespace:ControlTemplate.ViewModels"
             x:Class="ControlTemplate.MainPage" Shell.NavBarIsVisible="False">
    <ContentPage.BindingContext>
        <vm:vmLogin />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <control:LoginControl Username="{Binding Username}" Password="{Binding Password}" />
            <Button Text="Login" Margin="0,20,0,10" WidthRequest="200" Command="{Binding LoginCommand}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
